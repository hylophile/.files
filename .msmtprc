# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
# account        gmail
# host           smtp.gmail.com
# port           587
# from           username@gmail.com
# user           username
# password       plain-text-password
account        uni
host           exchange.uni.de
from           unilmail
user           nickname
port           587
passwordeval "pass email/uni"

# A freemail service
account        posteo
host           posteo.de
from           mail
user           mail
port           587
passwordeval "pass email/posteo"

# Set a default account
account default : posteo
